<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vhouzi.abc.admin.stu.mapper.StudentMapper" >
  <resultMap id="DTOResultMap" type="com.vhouzi.abc.admin.stu.dto.StudentDTO"
  extends="BaseResultMap">
  </resultMap>

  <!-- 基本的sql查询条件公共引用 -->
  <sql id="searchBy">
    <trim prefix="where" prefixOverrides="and|or">
        t1.member_id=t2.member_id
      <if test="openMemberId != null">
        and t1.open_member_id = #{openMemberId,jdbcType=BIGINT}
      </if>
      <if test="memberId != null">
        and t1.member_id = #{memberId,jdbcType=BIGINT}
      </if>
      <if test="mobile !=null and mobile != ''">
        and t1.mobile = #{mobile,jdbcType=VARCHAR}
      </if>
    </trim>
  </sql>

  <select id="findSelective" resultMap="DTOResultMap" parameterType="java.util.HashMap">
    select t1.*, t2.*
    from member_tm_student t1, member_tr_student_ext t2
    <include refid="searchBy"/>
  </select>
</mapper>